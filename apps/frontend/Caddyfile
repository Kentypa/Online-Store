{
    email {$VITE_CADDY_EMAIL}
}

imorhun.stud.shpp.me, www.imorhun.stud.shpp.me {
    root * /usr/share/caddy
    encode gzip zstd
    file_server

    handle_path /api/* {
        reverse_proxy backend:3000
    }

    handle_path /public/* {
        reverse_proxy backend:3000
    }

    handle_path /uploads/* {
        reverse_proxy backend:3000
    }

    handle {
        try_files {path} /index.html
        file_server
    }
}